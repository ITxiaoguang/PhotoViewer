<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <Button
        android:id="@+id/btn_complex_demo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="photoViewer 所有功能综合演示"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_friends_res"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="仿朋友圈显示 apk 内资源图片"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="带 header footer 的 recyclerView 使用场景"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_universal_local"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="本地图片"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_clear_universal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="clear cache" />

</LinearLayout>
